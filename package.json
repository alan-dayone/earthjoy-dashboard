{
  "name": "int-nextjs-ts",
  "description": "Boilerplate for front-end code using Next.js and Typescript",
  "author": "DayOne Software Technology Co., Ltd",
  "license": "ISC",
  "version": "1.0.0",
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:dayone-teams/int-boilerplates/int-nextjs-ts.git"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node --project tsconfig-server.json server.ts",
    "lint": "gts check && stylelint scss",
    "lint:fix": "gts fix",
    "test": "echo \"Need to write test\"",
    "prebuild": "npm run lint && npm run test && npm run clean",
    "build": "npm run build:server && npm run build:client && npm run build:bundle",
    "build:server": "tsc -p tsconfig-server.json && cp {package,package-lock}.json build",
    "build:client": "next build && cp -R .next build && cp -R static build/static",
    "build:bundle": "mkdir -p build-bundle && tar -cvzf build-bundle/bundle.tar.gz build",
    "clean": "rm -rf .next build"
  },
  "dependencies": {
    "@coreui/coreui": "^2.1.12",
    "@coreui/icons": "^0.3.0",
    "@coreui/react": "^2.5.1",
    "@zeit/next-sass": "^0.2.1-canary.4",
    "@zeit/next-typescript": "^1.1.1",
    "ag-grid-community": "^21.0.1",
    "ag-grid-react": "^21.0.1",
    "axios": "^0.19.0",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "formik": "^1.5.8",
    "http-proxy-middleware": "^0.19.1",
    "js-cookie": "^2.2.0",
    "lodash": "^4.17.11",
    "next": "^8.1.0",
    "next-redux-wrapper": "^3.0.0-alpha.3",
    "next-routes": "^1.4.2",
    "node-sass": "^4.12.0",
    "nprogress": "^0.2.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "reactstrap": "^8.0.0",
    "redux": "^4.0.1",
    "redux-crud": "^3.3.0",
    "redux-thunk": "^2.3.0",
    "validate.js": "^0.13.1",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/classnames": "^2.2.9",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/http-proxy-middleware": "^0.19.2",
    "@types/js-cookie": "^2.2.2",
    "@types/lodash": "^4.14.135",
    "@types/next": "^8.0.5",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.1.0",
    "@types/reactstrap": "^8.0.1",
    "@types/yup": "^0.26.22",
    "gts": "^1.0.0",
    "husky": "^2.3.0",
    "nodemon": "^1.19.1",
    "snazzy": "^8.0.0",
    "stylelint": "^10.1.0",
    "stylelint-checkstyle-formatter": "^0.1.2",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-scss": "^3.8.0",
    "ts-node": "8.1.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
